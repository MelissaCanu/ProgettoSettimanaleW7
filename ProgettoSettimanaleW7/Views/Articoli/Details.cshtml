@model ProgettoSettimanaleW7.Models.Articoli

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <img class="card-img-top img-fluid custom-img" src="@Url.Content(Model.Immagine)" alt="@Model.Nome" onerror="this.onerror=null; this.src='/path/to/default/image.jpg'" />
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(model => model.Nome)</h5>
                <p class="card-text">Prezzo: @Html.DisplayFor(model => model.Prezzo)</p>
                <p class="card-text">Tempo Consegna: @Html.DisplayFor(model => model.TempoConsegna)</p>
                <a href="@Url.Action("Edit", "Articoli", new { id = Model.IdArticolo })" class="btn btn-primary">Edit</a>
                <a href="@Url.Action("Index", "Articoli")" class="btn btn-primary">Back to List</a>
            </div>
        </div>
    </div>
</div>
